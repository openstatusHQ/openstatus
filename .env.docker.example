# ============================================================================
# Docker Environment Configuration (Example)
# ============================================================================
# Copy this file to .env.docker and replace with your actual values
#
# NOTE: Build-time placeholders are set in each service's dofigen.yml file.
# Values in this file override those placeholders at runtime via docker-compose.

OPENSTATUS_INGEST_URL=https://openstatus-private-location.fly.dev

# DATABASE (all services)
# ============================================================================
# LibSQL database connection - points to the libsql container
DATABASE_URL=http://libsql:8080
DATABASE_AUTH_TOKEN=basic:token

CLICKHOUSE_URL=test
CLICKHOUSE_USERNAME=test
CLICKHOUSE_PASSWORD=test

# REDIS & QUEUE (server and workflows)
# ============================================================================
UPSTASH_REDIS_REST_URL=test
UPSTASH_REDIS_REST_TOKEN=test

QSTASH_CURRENT_SIGNING_KEY=test
QSTASH_NEXT_SIGNING_KEY=test
QSTASH_TOKEN=test
QSTASH_URL=https://qstash.upstash.io/v1/publish/

# ANALYTICS (workflows and server)
# ============================================================================
TINY_BIRD_API_KEY=test

# EMAIL (notifications)
# ============================================================================
# Resend API key for sending emails - get from https://resend.com
# Use "test" for local development (emails won't be sent)
RESEND_API_KEY=test

# AUTHENTICATION (dashboard and web)
# ============================================================================
# NextAuth secret - generate with: openssl rand -base64 32
AUTH_SECRET=change-me-to-a-random-secret-at-least-32-characters-long

# Self-hosted mode - enables magic link email authentication
# Set to "true" for self-hosted deployments to allow email login without OAuth
SELF_HOST=true

# GitHub OAuth - get from https://github.com/settings/developers
AUTH_GITHUB_ID=test
AUTH_GITHUB_SECRET=test

# Google OAuth - get from https://console.cloud.google.com
AUTH_GOOGLE_ID=test
AUTH_GOOGLE_SECRET=test

# GOOGLE CLOUD (workflows - task scheduling)
# ============================================================================
GCP_PROJECT_ID=test
GCP_LOCATION=europe-west1
GCP_CLIENT_EMAIL=test
GCP_PRIVATE_KEY=test

CRON_SECRET=test

# API KEYS (server)
# ============================================================================
# Unkey - get from https://unkey.dev
UNKEY_API_ID=test
UNKEY_TOKEN=test

# Super admin token for privileged operations
SUPER_ADMIN_TOKEN=test

# Server region identifier
FLY_REGION=self-hosted

# STRIPE (dashboard - payments)
# ============================================================================
# Stripe keys - get from https://stripe.com/docs/keys
STRIPE_SECRET_KEY=test
STRIPE_WEBHOOK_SECRET_KEY=test
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=test

# VERCEL (dashboard - custom domains)
# ============================================================================
# Vercel integration - get from https://vercel.com
# Leave empty for local development (custom domain features will be disabled)
PROJECT_ID_VERCEL=
TEAM_ID_VERCEL=
VERCEL_AUTH_BEARER_TOKEN=

# Vercel Blob storage token - get from https://vercel.com/docs/storage/vercel-blob
BLOB_READ_WRITE_TOKEN=

# OBSERVABILITY
# ============================================================================
# Sentry - get from https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=test
SENTRY_AUTH_TOKEN=test

# OpenPanel - get from https://openpanel.dev
NEXT_PUBLIC_OPENPANEL_CLIENT_ID=test
OPENPANEL_CLIENT_SECRET=test

# PagerDuty - get from https://pagerduty.com
PAGERDUTY_APP_ID=test

# Slack webhook
SLACK_SUPPORT_WEBHOOK_URL=test

# SERVICE CONFIGURATION
# ============================================================================
NODE_ENV=production

# Public URL for the application
NEXT_PUBLIC_URL=http://localhost:3002

# External API URL for service-to-service communication
# Use service name from docker-compose.yaml
EXTERNAL_API_URL=http://server:3000

# Screenshot service URL
SCREENSHOT_SERVICE_URL=test

# DEVELOPMENT & TESTING
# ============================================================================
# Turbo build mode
TURBO_ENV_MODE=loose

# Playground Unkey
PLAYGROUND_UNKEY_API_KEY=test

# Workspace visibility settings
WORKSPACES_LOOKBACK_30=test
WORKSPACES_HIDE_URL=test
