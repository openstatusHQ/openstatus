{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter='./apps/web' --filter='./packages/db'",
    "dx": "turbo run dx",
    "lint": "turbo run lint",
    "lint:strict": "eslint --max-warnings=0 apps/**/*.{ts,tsx}",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier -c \"**/*.{ts,tsx,md}\"",
    "tsc": "tsc",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.2.1",
    "@openstatus/eslint-config": "workspace:*",
    "@turbo/gen": "1.13.3",
    "eslint": "8.50.0",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.14",
    "turbo": "1.13.3",
    "typescript": "5.4.5"
  },
  "packageManager": "pnpm@9.1.2",
  "name": "openstatus",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*",
    "packages/notifications/*"
  ]
}
