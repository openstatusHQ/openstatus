# OpenStatus Self-Hosting Environment Configuration
# Copy this file to .env and fill in your values

# DATABASE CONFIGURATION
# Turso/LibSQL Database URL
DATABASE_URL=libsql://turso:8080
# Alternative: For external Turso database
# DATABASE_URL=libsql://your-database-url.turso.io?authToken=your-auth-token

# REDIS CONFIGURATION
REDIS_URL=redis://redis:6379

# AUTHENTICATION
# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-nextauth-secret-here-change-this

# GitHub OAuth (optional)
GITHUB_ID=your-github-oauth-app-id
GITHUB_SECRET=your-github-oauth-app-secret

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# EMAIL CONFIGURATION (Resend)
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@yourdomain.com

# SMS CONFIGURATION (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# ANALYTICS (TinyBird)
TINYBIRD_API_KEY=your-tinybird-api-key
TINYBIRD_BASE_URL=https://api.tinybird.co

# UPSTASH CONFIGURATION
# Upstash Redis (if using external Upstash instead of local Redis)
UPSTASH_REDIS_REST_URL=your-upstash-redis-rest-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-rest-token

# Upstash QStash (for background jobs)
QSTASH_URL=https://qstash.upstash.io
QSTASH_TOKEN=your-qstash-token
QSTASH_CURRENT_SIGNING_KEY=your-qstash-current-signing-key
QSTASH_NEXT_SIGNING_KEY=your-qstash-next-signing-key

# PAYMENTS (Stripe)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# FILE STORAGE (Vercel Blob)
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# MONITORING & NOTIFICATIONS
# Discord Webhook (optional)
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Slack Webhook (optional)
SLACK_WEBHOOK_URL=your-slack-webhook-url

# PagerDuty (optional)
PAGERDUTY_API_KEY=your-pagerduty-api-key

# Opsgenie (optional)
OPSGENIE_API_KEY=your-opsgenie-api-key

# APPLICATION CONFIGURATION
# Environment
NODE_ENV=production

# Application URLs
NEXT_PUBLIC_URL=http://localhost:3000
API_URL=http://server:8000

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here

# OPTIONAL SERVICES
# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn

# PostHog (Analytics)
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
