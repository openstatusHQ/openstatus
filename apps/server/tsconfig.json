{
  "extends": "@openstatus/tsconfig/base.json",
  "include": ["src", "*.ts", "**/*.ts"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "preserve",
    "moduleResolution": "bundler",
    "jsxImportSource": "react",
    "allowJs": true,
    "types": ["bun-types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
